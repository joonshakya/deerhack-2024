{
  "name": "@acme/server",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "with-env": "dotenv -e ../../.env --",
    "build": "esbuild index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap",
    "dev": "pnpm with-env tsx watch --clear-screen=false index",
    "devWithExpo": "pnpm with-env tsx watch --clear-screen=false index",
    "serve": "esbuild index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap && node dist/index.js",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.414.0",
    "@aws-sdk/s3-request-presigner": "^3.414.0",
    "@fastify/websocket": "^8.2.0",
    "@trpc/server": "^10.43.0",
    "@types/nodemailer": "^6.4.13",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "canvas": "^2.11.2",
    "expo-server-sdk": "^3.7.0",
    "fastify": "^4.24.3",
    "google-auth-library": "^9.6.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "tslib": "^2.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "^0.2.0",
    "@acme/prettier-config": "^0.1.0",
    "@acme/tsconfig": "^0.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/qrcode": "^1.5.2",
    "esbuild": "^0.19.5",
    "tsx": "^3.14.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@acme/eslint-config/base"
    ]
  },
  "prettier": "@acme/prettier-config"
}
